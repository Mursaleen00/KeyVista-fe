{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/constant/layouts-data/navbar-data.tsx",
    "src/components/cards/property-by-city-card.tsx",
    "src/components/common/profile-drop-down.tsx",
    "src/components/common/select.jsx",
    "src/constant/cards/rent-buy-cards-data.ts",
    "src/views/Terms-And-Conditions/index.tsx",
    "src/components/common/carousel.tsx",
    "src/views/Properties/rent-buy-properties/index.tsx",
    "src/app/(pages)/properties/rent-buy-properties/page.tsx"
  ],
  "exclude": ["node_modules"]
}
